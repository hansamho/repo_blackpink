	      <select id="selectList" resultMap="resultMapObj">
        SELECT
            a.cgSeq
            ,a.name
            ,a.cgRegDate
            ,a.cgUpdate
            ,a.cgDelny
       	<include refid="selectCommon" />
        ORDER BY a.cgSeq DESC
        limit #{rowNumToShow} offset #{startRnumForMysql}
    </select> 
	  
	  <select id="selectOneCount" resultType="Integer">
		SELECT COUNT(*)
		<include refid="selectCommon" />
	</select>
	  
	  <select id="selectOne" resultMap="resultMapObj">
        SELECT
            a.cgSeq
            ,a.Name
            ,a.cgRegDate
            ,a.cgUpdate
            ,a.cgDelny
         FROM codeGroup a
        WHERE 1=1
        AND a.cgSeq = #{cgSeq}
        ORDER BY a.cgSeq DESC
    </select>
    
    <insert id="insert">
    	INSERT INTO codeGroup(
            name
            ,cgRegDate
            ,cgUpdate
            ,cgDelny
    	) VALUES(		 
    		#{name}
    		,now()
    		,now()
    		,0
    	)
           
    </insert>
    
    
    <update id="update">
    	
    	UPDATE codeGroup 
    	set
    	name = #{name}
    	WHERE cgSeq = #{cgSeq}
  
    </update>
    
    <update id="updateDelete">
    	
    	UPDATE codeGroup 
    	set
    	cgDelny = 1
    	WHERE cgSeq = #{cgSeq}
  
    </update>
    
    <delete id="delete">
    	DELETE FROM codeGroup
    	WHERE cgSeq = #{cgSeq}
    </delete>
    
    <select id="selectListWithoutPaging" resultMap="resultMapObj">
		SELECT
			a.cgSeq
			,a.name
		FROM codeGroup a
		WHERE 1=1
			AND cgDelNy = 0
<!-- 			And ifcgUseNy = 1 -->
		ORDER BY a.cgSeq DESC
	</select>
